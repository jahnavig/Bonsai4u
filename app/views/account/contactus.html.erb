<section id = "body" class = "container">
    
    <div class= "row">
    <h2 style="align:center;">Contact Us</h2>
 <%= form_for(:user, :html=>{:class =>"form-horizontal center"}) do |f| %>


    <div class="form-group">
        <%= f.label :email, "Email:", class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.text_field :email, class: "form-control" , placeholder: "Email"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :message, "message:", class: "col-sm-2 control-label" %>
        <div class="col-sm-4">
          <%= f.text_field :message, class: "form-control", placeholder: "message" %>
        </div>
      </div>
       

            <div class = "form-groupcol-sm-offset-2 col-sm-10 form-actions">
                  <%= f.submit "Submit", class: "btn btn-default btn-success" %>  
    </div>
  
  <% end %>


</section>

