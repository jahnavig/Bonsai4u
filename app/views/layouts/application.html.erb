			<!--	<a href="/carts">Cart</a> -->

				<% unless session[:cart_id].nil? %>

				<%= link_to "Cart", cart_path(session[:cart_id])%>
				<% end %>

				<%= link_to 'Login', :controller=>"account", :action=>"login" %>
				<%= link_to 'ContactUS', :controller=>"account", :action=>"contactus" %>

				
				</li>
			</ul>

		</nav>
	
	<div id="content-container">
	
	<section>

	<%= yield %>

	</section>
	
	</div>	

